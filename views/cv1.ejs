function getPDF(selector) {
  kendo.drawing.drawDOM($(selector)).then(function (group) {
    kendo.drawing.pdf.saveAs(group, "yourResume.pdf");
  });
}

$("#printBtn").click(function () {
  document.getElementById("printBtn").style.display = "none";
  getPDF("#cv-template");
});
        </script>

</body>

